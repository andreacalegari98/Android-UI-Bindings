<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/permission_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.your_company.ui_bindings_kotlin_sample.CouponsActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/brand" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/valid_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Valid Coupon" />

            <Button
                android:id="@+id/inactive_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Inactive Coupon" />

            <Button
                android:id="@+id/expired_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Expired Coupon" />

            <Button
                android:id="@+id/custom_icon_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Custom Icon Coupon" />

            <Button
                android:id="@+id/plain_coupon_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Coupon in activity" />

            <Button
                android:id="@+id/coupon_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Coupon List" />

            <Button
                android:id="@+id/valid_coupon_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Valid Coupon List" />

            <Button
                android:id="@+id/redeemed_coupon_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Redeemed Coupon List" />

            <Button
                android:id="@+id/inactive_coupon_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Inactive Coupon List" />

            <Button
                android:id="@+id/expired_coupon_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Expired Coupon List" />

            <Button
                android:id="@+id/include_redeemed_coupon_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Complete Coupon List" />

            <Button
                android:id="@+id/coupon_list_in_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:padding="10dp"
                android:textColor="#fff"
                android:text="Coupon List in activity" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>