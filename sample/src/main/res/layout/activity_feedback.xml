<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.your_company.ui_bindings_sample.FeedbackActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/brand" />

    <Button
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:textColor="#fff"
        android:minHeight="0dp"
        android:text="complete feedback" />

    <Button
        android:id="@+id/no_text_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:textColor="#fff"
        android:minHeight="0dp"
        android:text="no text response feedback" />

    <Button
        android:id="@+id/feedback_in_plain_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:textColor="#fff"
        android:minHeight="0dp"
        android:text="feedback in activity" />

</LinearLayout>
