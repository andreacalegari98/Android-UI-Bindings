<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Dialogs style  -->
    <style name="NearItUIPermissionsDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NearItUICouponDetailDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/nearit_ui_coupon_detail_activity_container_background_color</item>
    </style>

    <style name="NearItUIWarningDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NearItUIFeedbackDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NearItUIContentDetailDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--  Text appearances  -->
    <style name="NearItUIPermissionsExplanationTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_permissions_text_size</item>
        <item name="android:textColor">@color/nearit_ui_permissions_text_color</item>
    </style>

    <style name="NearItUIPermissionButtonTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_permission_button_text_size</item>
        <item name="android:textColor">@drawable/nearit_ui_selector_permission_button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NearItUIPermissionsCloseTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_permissions_text_size</item>
        <item name="android:textColor">@drawable/nearit_ui_selector_permission_close_text_color</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="NearItUIPermissionBarAlertMessageTextAppearance">
        <item name="android:textColor">@color/nearit_ui_permission_bar_alert_text_color</item>
        <item name="android:textSize">@dimen/nearit_ui_permission_bar_alert_text_size</item>
    </style>

    <style name="NearItUIPermissionBarButtonTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_permission_bar_button_text_size</item>
        <item name="android:textColor">@drawable/nearit_ui_selector_permission_button_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NearItUICouponDetailValidityTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_validity_text_size</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="NearItUICouponDetailValidityPeriodTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_validity_text_size</item>
        <item name="android:textColor">@color/nearit_ui_coupon_detail_validity_period_color</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="NearItUICouponDetailValidityLabelTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_not_valid_text_size</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="NearItUICouponDetailSerialTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_serial_text_size</item>
        <item name="android:textColor">@color/nearit_ui_coupon_detail_serial</item>
    </style>

    <style name="NearItUICouponDetailTitleTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_title_text_size</item>
        <item name="android:textColor">@color/nearit_ui_coupon_detail_title_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NearItUICouponDetailValueTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_value_text_size</item>
        <item name="android:textColor">@color/nearit_ui_coupon_detail_value_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NearItUICouponDetailDescriptionTextAppearance">
        <item name="android:textSize">@dimen/nearit_ui_coupon_detail_description_text_size</item>
        <item name="android:textColor">@color/nearit_ui_coupon_detail_description_color</item>
    </style>




    <style name="NearItUIButtonTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/nearit_ui_permission_button_text_size</item>
    </style>


</resources>