<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NearItUIPermissionsDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NearItUIPermissionButtonTextAppearance" parent="TextAppearance.AppCompat.Button">
        <!--    ASAP-MEDIUM  -->
        <item name="android:textSize">@dimen/nearit_ui_permission_button_text_size</item>
    </style>
    
    <style name="NearItUIPermissionsTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <!--    ASAP-REGULAR  -->
        <item name="android:textSize">@dimen/nearit_ui_permissions_text_size</item>
        <item name="android:textColor">@color/nearit_ui_permissions_text_color</item>
    </style>

    <style name="NearItUIPermissionsCloseTextAppearance">
        <!--    ASAP-ITALIC  -->
        <item name="android:textSize">@dimen/nearit_ui_permissions_text_size</item>
        <item name="android:textColor">@color/nearit_ui_permissions_text_color</item>
    </style>
</resources>