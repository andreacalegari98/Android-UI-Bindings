<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nearit_ui_selector_permission_button">

    <ImageView
        android:id="@+id/permission_button_icon"
        android:layout_width="15dp"

        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/nearit_ui_permissions_activity_icon_margin"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/permission_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/nearit_ui_selector_permission_button_text_color"
        android:textAppearance="@style/NearItUIPermissionButtonTextAppearance"
        android:gravity="center"
        android:layout_centerInParent="true"/>

</RelativeLayout>