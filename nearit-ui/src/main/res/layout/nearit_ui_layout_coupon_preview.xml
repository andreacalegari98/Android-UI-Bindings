<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:layout_marginBottom="14dp"
    android:paddingTop="22dp"
    android:background="@drawable/nearit_ui_coupon_list_coupon_background_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/coupon_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/ic_nearit_ui_brand_nearit_black"/>

    <LinearLayout
        android:id="@+id/coupon_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coupon_title"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:textSize="15sp"
            android:textColor="@color/nearit_ui_black"
            android:text="Nome di questo coupon lun"/>

        <TextView
            android:id="@+id/coupon_value"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="9dp"
            android:gravity="center_vertical"
            android:text="Valoreqwertyuioplkjhgfdsazxcvbnmpoiuytrew"
            android:textColor="@color/nearit_ui_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/coupon_validita"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="25dp"
            android:gravity="end"
            android:textSize="13sp"
            android:text="Coupon valido" />

    </LinearLayout>

</LinearLayout>